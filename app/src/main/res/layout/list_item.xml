<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:padding="4dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:textSize="18sp">

    <ImageView
        android:id="@+id/imgMovieView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="Apple Pie"
        app:srcCompat="@drawable/apple_pie"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtMovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/txt_margin"
        android:layout_marginStart="@dimen/txt_margin"
        android:layout_toEndOf="@id/imgMovieView"
        android:layout_toRightOf="@id/imgMovieView"
        android:text="A menu Item"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtMovieDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/imgMovieView"
        android:layout_toRightOf="@id/imgMovieView"
        android:layout_below="@id/txtMovieTitle"
        android:text="A Description"
        android:textSize="12sp"
        tools:ignore="HardcodedText"/>
</RelativeLayout>